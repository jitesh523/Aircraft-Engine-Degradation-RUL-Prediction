# EditorConfig â€” consistent formatting across IDEs
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.py]
max_line_length = 127

[*.{yml,yaml}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{json,toml}]
indent_size = 2

[Dockerfile]
indent_size = 4

[*.{cfg,ini}]
indent_size = 4

[*.cff]
indent_size = 2

[*.sh]
indent_size = 2
end_of_line = lf
