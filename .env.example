# ─── Application Settings ────────────────────────────────────
# C-MAPSS dataset directory (default: CMAPSSData)
CMAPSS_DATA_DIR=CMAPSSData

# Random seed for reproducibility
RANDOM_SEED=42

# ─── API Settings ────────────────────────────────────────────
# Host and port for the FastAPI server
API_HOST=0.0.0.0
API_PORT=8000

# ─── External Services ──────────────────────────────────────
# Google Gemini API key for LLM assistant (optional)
GEMINI_API_KEY=your-api-key-here

# ─── Logging ─────────────────────────────────────────────────
LOG_LEVEL=INFO
